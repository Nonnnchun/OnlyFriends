@model dynamic
@{
    ViewData["Title"] = "Profile";
    
    var username = "DemonineZ";
    var joinedDate = "February 2026";
    var hosted = 1;
    var attended = 0;

    //event check if true show it , False show default
    bool hasEvents = false; 
}

<style>
    .profile-container {
        max-width: 900px;
        margin: 40px auto;
        text-align: center;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background-color: #f5deb0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 50px;
        margin: 0 auto 20px;
    }

    .profile-stats {
        margin-top: 10px;
        color: #777;
    }

    .nothing-box {
        margin-top: 40px;
        opacity: .6;
    }

    .nothing-box img {
        width: 150px;
        margin-bottom: 20px;
    }

    .event-list {
        margin-top: 40px;
    }

    .event-card {
        padding: 20px;
        border-radius: 10px;
        border: 1px solid #eee;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        margin-bottom: 20px;
        text-align: left;
    }
</style>


<div class="profile-container">

    <!-- Profile image -->
    <div class="profile-avatar">
        ðŸ˜Š
    </div>

    <!-- Username -->
    <h2>@username</h2>

    
    <!-- Joined date -->
    <p style="color:#888;">
        <i class="bi bi-calendar"></i> Joined @joinedDate
    </p>


    <!-- Stats -->
    <div class="profile-stats">
        <span><strong>@hosted</strong> Hosted</span> â€¢
        <span><strong>@attended</strong> Attended</span>
    </div>

    <hr style="margin:40px 0;">

    @if (hasEvents)
    {
        <div class="event-list">

            <!-- Example Event Card -->
            <div class="event-card">
                <h4>Sample Event Title</h4>
                <p style="color:#777;">Event description or date here...</p>
            </div>

            <div class="event-card">
                <h4>Another Event</h4>
                <p style="color:#777;">More details here...</p>
            </div>
        </div>
    }
    else
    {
        <div class="nothing-box">
            <img src="https://cdn-icons-png.flaticon.com/512/7486/7486830.png" />
            <h4>Nothing Here, Yet</h4>
            <p>@username has no public events at this time.</p>
        </div>
    }
</div>
