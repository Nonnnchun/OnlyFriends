@model onlyfriends.Models.User

@{
    ViewData["Title"] = "Settings";


}



<style>
    body {
        font-family: "Inter", sans-serif;
        background-color: #fafafa;
        margin: 0;
        padding: 0;
    }

    .settings-container {
        width: 90%;
        max-width: 900px;
        margin: 40px auto;
        padding-bottom: 40px;
    }

    .page-title {
        font-size: 36px;
        font-weight: 700;
        margin-bottom: 25px;
    }

    /* Tabs */
    .tabs {
        display: flex;
        border-bottom: 1px solid #ddd;
        margin-bottom: 30px;
    }
    .tab {
        margin-right: 25px;
        padding-bottom: 10px;
        cursor: pointer;
        font-weight: 500;
        color: #666;
        transition: all 0.2s ease;
    }
    .tab:hover {
        color: #333;
    }
    .tab.active {
        border-bottom: 2px solid #000;
        color: #000;
    }

    /* Section block */
    .section-title {
        font-size: 22px;
        font-weight: 600;
        margin-bottom: 5px;
        margin-top: 15px;
    }
    .section-sub {
        color: #777;
        font-size: 14px;
        margin-bottom: 20px;
    }
    .section-box {
        background: #fff;
        padding: 18px;
        border-radius: 10px;
        border: 1px solid #eee;
        margin-bottom: 40px;
    }

    /* Form grid */
    .grid-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }
    .grid-3 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 5px;
        display: block;
    }
    input, select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 14px;
        box-sizing: border-box;
        font-family: "Inter", sans-serif;
    }

    input:focus, select:focus, textarea:focus {
        outline: none;
        border-color: #000;
    }

    textarea {
        resize: vertical;
        min-height: 80px;
    }

    .save-btn {
        margin-top: 20px;
        padding: 12px 25px;
        border-radius: 10px;
        border: none;
        background: black;
        color: white;
        cursor: pointer;
        font-size: 15px;
        font-weight: 500;
        transition: background 0.2s ease;
    }

    .save-btn:hover {
        background: #333;
    }

    /* Social icons */
    .social-list {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
    }

    /* Email/phone list items */
    .item-box {
        background: #f9f9f9;
        border-radius: 10px;
        padding: 15px;
        border: 1px solid #eee;
        margin-bottom: 15px;
    }

    .danger-btn {
        background: #e53935;
        color: #fff;
        padding: 12px 20px;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        font-weight: 500;
        transition: background 0.2s ease;
    }

    .danger-btn:hover {
        background: #c62828;
    }

    /* Hidden tabs */
    .tab-content {
        display: none;
    }
    .tab-content.active {
        display: block;
    }

    /* Phone input inline fix */
    .phone-input-container {
        display: flex;
        gap: 10px;
        align-items: flex-start;
    }
    .phone-input-container input {
        flex: 1;
    }
    .phone-input-container button {
        margin-top: 0;
        white-space: nowrap;
    }

    /* Checkbox styling */
    .checkbox-item {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }
    .checkbox-item input[type="checkbox"] {
        width: auto;
        margin-right: 10px;
        cursor: pointer;
    }
</style>

<div class="settings-container">
    <div class="page-title">Settings</div>

    <!-- tab list -->
    <div class="tabs">
        <div class="tab active" data-tab="account">Account</div>
        <div class="tab" data-tab="preferences">Preferences</div>
        <div class="tab" data-tab="payment">Payment</div>
    </div>

    <!-- account -->
    <div id="account" class="tab-content active">

        <!-- Profile Section -->
        <div class="section-title">Your Profile</div>
        <div class="section-sub">Choose how you are displayed as a host or guest.</div>

        <div class="section-box">
            <div class="grid-2">
                <div>
                    <label class="form-label">First Name</label>
                    <input type="text" value="@Model.FirstName" placeholder="John">
                </div>
                <div>
                    <label class="form-label">Last Name</label>
                    <input type="text" value="@Model.LastName" placeholder="Doe">
                </div>
            </div>

            <div style="margin-top:20px;">
                <label class="form-label">Username</label>
                <input type="text" value="@Model.Username" placeholder="username">
            </div>

            <div style="margin-top:20px;">
                <label class="form-label">Bio</label>
                <textarea placeholder="Write something about yourself...">@Model.Bio</textarea>
            </div>

            <button class="save-btn">Save Changes</button>
        </div>

        <!-- Social Links -->
        <div class="section-title">Social Links</div>
        <div class="section-sub">Displayed publicly on your profile.</div>

        <div class="section-box">
            <div class="social-list">
                <input type="text" placeholder="instagram.com/username">
                <input type="text" placeholder="x.com/username">
                <input type="text" placeholder="youtube.com/username">
                <input type="text" placeholder="tiktok.com/username">
                <input type="text" placeholder="linkedin.com/in/handle">
                <input type="text" placeholder="yourwebsite.com">
            </div>
            <button class="save-btn">Save Social Links</button>
        </div>

        <!-- Email Section -->
        <div class="section-title">Emails</div>
        <div class="section-sub">Receive notifications through emails.</div>
        <div class="section-box">
            <div class="item-box">
                <strong>@Model.Email</strong> (Primary)
            </div>
            <button class="save-btn">Add Email</button>
        </div>

        <!-- Phone Section -->
        <div class="section-title">Phone Number</div>
        <div class="section-sub">Used for SMS verification.</div>
        <div class="section-box">
            <div class="phone-input-container">
                <input type="tel" placeholder="+66 81 234 5678">
                <button class="save-btn">Update</button>
            </div>
        </div>

        <!-- Password Section -->
        <div class="section-title">Password & Security</div>
        <div class="section-box">
            <button class="save-btn">Set / Change Password</button>
        </div>

        <!-- Devices -->
        <div class="section-title">Active Devices</div>
        <div class="section-sub">Devices currently logged in to your account.</div>

        <div class="section-box">
            <div class="item-box">
                <strong>Chrome on Windows</strong><br>
                Lat Krabang, TH • Last active: Today
            </div>
            <div class="item-box">
                <strong>Mobile Chrome on Android</strong><br>
                Bangkok, TH • Last active: 2 hours ago
            </div>
        </div>

        <!-- Delete Account -->
        <div class="section-title">Delete Account</div>
        <div class="section-sub">This action cannot be undone.</div>
        <div class="section-box">
            <button class="danger-btn">Delete My Account</button>
        </div>
    </div>


    <!-- PREFERENCES TAB -->
    <div id="preferences" class="tab-content">

        <div class="section-title">Display</div>
        <div class="section-sub">Choose your theme.</div>

        <div class="section-box">
            <label class="form-label">Theme</label>
            <select>
                <option>System</option>
                <option>Light</option>
                <option>Dark</option>
            </select>
        </div>

        <div class="section-title">Language</div>
        <div class="section-sub">Select your preferred language.</div>
        <div class="section-box">
            <label class="form-label">Language</label>
            <select>
                <option>English</option>
            </select>
        </div>

        <div class="section-title">Notifications</div>
        <div class="section-sub">Choose how you want to be notified.</div>

        <div class="section-box">
            <div class="checkbox-item">
                <input type="checkbox" id="event-invites" checked>
                <label for="event-invites">Event Invites</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="event-reminders" checked>
                <label for="event-reminders">Event Reminders</label>
            </div>
            <div class="checkbox-item">
                <input type="checkbox" id="event-updates">
                <label for="event-updates">Event Registration Updates</label>
            </div>
            <button class="save-btn">Save Preferences</button>
        </div>
    </div>

    <!-- PAYMENT TAB -->
    <div id="payment" class="tab-content">

        <div class="section-title">Payment Methods</div>
        <div class="section-sub">Used for paid events.</div>

        <div class="section-box">
            <p style="color: #777; margin-bottom: 20px;">No payment methods added yet.</p>
            <button class="save-btn">+ Add Card</button>
        </div>

        <div class="section-title">Billing History</div>
        <div class="section-sub">View your past transactions.</div>
        <div class="section-box">
            <p style="color: #777;">No billing history available.</p>
        </div>

    </div>
</div>

<script>
    // java vibe =w=
    document.querySelectorAll('.tab').forEach(tab => {
        tab.addEventListener('click', function() {
            const targetTab = this.getAttribute('data-tab');
            
            // Remove active class from all tabs and content
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            
            // Add active class to clicked tab and corresponding content
            this.classList.add('active');
            document.getElementById(targetTab).classList.add('active');
        });
    });
</script>