@{
    ViewData["Title"] = "Profile";

    var username = "DemonineZ";
    var joinedDate = "February 2026";
    var hosted = 0;
    var attended = 3;

    // TODO: Replace with real DB query
    bool hasEvents = true;

    var mockEvents = new[]
    {
        new {
            Title = "Late Night Board Game Bash",
            Description = "Bring your favorite board games! Snacks provided. All skill levels welcome.",
            Date = "Saturday, March 8, 2026",
            Time = "8:00 PM",
            Location = "DemonineZ's Place, Bangkok",
            Attendees = 5,
            Tag = "Social",
            Image = "https://images.unsplash.com/photo-1610890716171-6b1bb98ffd09?w=800&q=80"
        },
        new {
            Title = "Indie Film Night ðŸŽ¬",
            Description = "We're watching two indie films back-to-back. Discussion session after each one.",
            Date = "Friday, March 14, 2026",
            Time = "7:30 PM",
            Location = "The Projector Lounge",
            Attendees = 12,
            Tag = "Culture",
            Image = "https://images.unsplash.com/photo-1536440136628-849c177e76a1?w=800&q=80"
        },
        new {
